<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #43DCFE;" stylesheets="@/css/style.css" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="karmanchuk.bouncing.ui.controller.MainUIController">
    <top>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <buttons>
            <TextField fx:id="tfSearch" prefHeight="25.0" prefWidth="347.0" promptText="Введите для поиска" />
            <ComboBox fx:id="cbSort" prefWidth="150.0" promptText="Сортировка" />
            <ComboBox fx:id="cbFilter" prefWidth="150.0" promptText="Фильтрация" />
         </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
        </ButtonBar>
    </top>
    <bottom>
        <ButtonBar buttonMinWidth="50.0" prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="btnBackPage" maxWidth="50.0" mnemonicParsing="false" prefWidth="50.0" styleClass="button-menu" text="&lt;" />
            <Label fx:id="lbPages" alignment="CENTER" prefWidth="70.0" text="Label" textAlignment="CENTER" />
            <Button fx:id="btnUpPage" maxWidth="50.0" mnemonicParsing="false" prefWidth="50.0" styleClass="button-menu" text="&gt;" />
            </buttons>
        </ButtonBar>
    </bottom>
    <center>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="vbAgents" />
            </content>
        </ScrollPane>
    </center>
</BorderPane>
